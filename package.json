{
  "name": "electron-angular-boilerplate",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/electron/electron-main.js",
  "scripts": {
    "build:all:dev": "npm-run-all -p -r build:renderer:dev build:preload:dev build:electron:dev",
    "build:all:prod": "npm-run-all -p -r build:renderer:prod build:preload:prod build:electron:prod",
    "build:electron:dev": "webpack --config ./src/electron/webpack.mjs --mode development",
    "build:electron:prod": "webpack --config ./src/electron/webpack.mjs --mode production",
    "build:preload:dev": "webpack --config ./src/preload/webpack.mjs --mode development",
    "build:preload:prod": "webpack --config ./src/preload/webpack.mjs --mode production",
    "build:renderer:dev": "ng build --configuration development",
    "build:renderer:prod": "ng build",
    "build:watch:all": "npm-run-all -p -r build:watch:renderer build:watch:electron build:watch:preload",
    "build:watch:electron": "webpack --watch --config ./src/electron/webpack.mjs --mode development",
    "build:watch:preload": "webpack --watch --config ./src/preload/webpack.mjs --mode development",
    "build:watch:renderer": "ng build --watch --configuration development",
    "clean": "npx rimraf dist release-builds node_modules .angular",
    "package": "electron-packager . electron-angular-boilerplate --asar --overwrite --prune=true --derefSymlinks=false --ignore=\"/node_modules|/src|.vscode|.editorconfig|.gitignore|.map|angular.json|tslint.json|README.md|package-lock.json|LICENSE\" --out=release-builds",
    "release": "npm-run-all -p -r build:all:prod package",
    "start:app": "electron .",
    "start:renderer": "ng serve",
    "test:lint": "ng lint",
    "test:test": "ng test",
    "update:angular": "ng update @angular/cli @angular/core",
    "update:material": "npm update @angular/material @angular/cdk",
    "update:webpack": "npm update webpack webpack-cli"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/cdk": "20.0.1",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "20.0.1",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@electron/packager": "^18.3.6",
    "electron": "^36.3.2",
    "rxjs": "~7.8.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/build": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.15.29",
    "@types/webpack": "^5.28.5",
    "angular-eslint": "19.6.0",
    "eslint": "^9.27.0",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-packagejson": "^2.5.14",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "tsx": "^4.19.4",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.32.1"
  }
}
